<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="dmitrenko_ns" id="REPLACEMENT_WORD-001">
        <createSequence sequenceName="REPLACEMENT_WORD_SEQ"/>
    </changeSet>

    <changeSet author="dmitrenko_ns" id="REPLACEMENT_WORD-002">
        <createTable schemaName="REPOSITORY" tableName="REPLACEMENT_WORD">
            <column name="REPLACEMENT_WORD_ID" type="INT" defaultValueSequenceNext="REPLACEMENT_WORD_SEQ">
                <constraints primaryKey="true" primaryKeyName="REPLACEMENT_WORD_PK"/>
            </column>
            <column name="REPLACEABLE" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="REPLACEMENT" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="MODIFIED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="dmitrenko_ns" id="REPLACEMENT_WORD-003">
        <insert schemaName="REPOSITORY" tableName="REPLACEMENT_WORD">
            <column name="REPLACEABLE" value="CC"/>
            <column name="REPLACEMENT" value="Coca-Cola"/>
        </insert>
        <insert schemaName="REPOSITORY" tableName="REPLACEMENT_WORD">
            <column name="REPLACEABLE" value="BOT."/>
            <column name="REPLACEMENT" value="Bottle"/>
        </insert>
    </changeSet>

</databaseChangeLog>

