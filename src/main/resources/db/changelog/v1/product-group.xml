<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="dmitrenko_ns" id="PRODUCT_GROUP-001">
        <createSequence sequenceName="PRODUCT_GROUP_SEQ"/>
    </changeSet>

    <changeSet author="dmitrenko_ns" id="PRODUCT_GROUP-002">
        <createTable schemaName="REPOSITORY" tableName="PRODUCT_GROUP">
            <column name="PRODUCT_GROUP_ID" type="INT" defaultValueSequenceNext="PRODUCT_GROUP_SEQ">
                <constraints primaryKey="true" primaryKeyName="PRODUCT_GROUP_PK"/>
            </column>
            <column name="GROUP_INDEX" type="INT"/>
            <column name="NAME" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="MODIFIED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="dmitrenko_ns" id="PRODUCT_GROUP-003">
        <insert schemaName="REPOSITORY" tableName="PRODUCT_GROUP">
            <column name="GROUP_INDEX" valueNumeric="4"/>
            <column name="NAME" value="Soda"/>
        </insert>
        <insert schemaName="REPOSITORY" tableName="PRODUCT_GROUP">
            <column name="GROUP_INDEX" valueNumeric="25"/>
            <column name="NAME" value="Milk"/>
        </insert>
        <insert schemaName="REPOSITORY" tableName="PRODUCT_GROUP">
            <column name="GROUP_INDEX" valueNumeric="44"/>
            <column name="NAME" value="Alcohol"/>
        </insert>
    </changeSet>

</databaseChangeLog>

