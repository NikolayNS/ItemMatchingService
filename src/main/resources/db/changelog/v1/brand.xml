<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="dmitrenko_ns" id="BRAND-001">
        <createSequence sequenceName="BRAND_SEQ"/>
    </changeSet>

    <changeSet author="dmitrenko_ns" id="BRAND-002">
        <createTable schemaName="REPOSITORY" tableName="BRAND">
            <column name="BRAND_ID" type="INT" defaultValueSequenceNext="BRAND_SEQ">
                <constraints primaryKey="true" primaryKeyName="BRAND_PK"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="MODIFIED" type="TIMESTAMP" defaultValue="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="dmitrenko_ns" id="BRAND-003">
        <insert schemaName="REPOSITORY" tableName="BRAND">
            <column name="NAME" value="Coca-Cola"/>
        </insert>
        <insert schemaName="REPOSITORY" tableName="BRAND">
            <column name="NAME" value="J7"/>
        </insert>
        <insert schemaName="REPOSITORY" tableName="BRAND">
            <column name="NAME" value="Pepsi"/>
        </insert>
        <insert schemaName="REPOSITORY" tableName="BRAND">
            <column name="NAME" value="Pringles"/>
        </insert>
        <insert schemaName="REPOSITORY" tableName="BRAND">
            <column name="NAME" value="Huawei"/>
        </insert>
        <insert schemaName="REPOSITORY" tableName="BRAND">
            <column name="NAME" value="Cannon"/>
        </insert>
    </changeSet>

</databaseChangeLog>

